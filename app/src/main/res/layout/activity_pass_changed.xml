<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassChangedActivity"
    android:background="@drawable/crystal">
    <View
        android:id="@+id/relativeBlue"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/upper_page" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:id="@+id/card"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:textAlignment="viewStart"
        android:background="#fefefe"
        app:cardCornerRadius="40dp"
        app:cardElevation="50dp">
        <LinearLayout
            android:background="@drawable/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="70dp"
                android:textStyle="bold"
                android:textColor="#08617f"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="Password Changed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:textColor="#094559"
                android:layout_gravity="center"
                android:text="Congratulations!! You've successfully"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#094559"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:text="changed your password."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/passchanged"
                android:layout_width="wrap_content"
                android:layout_height="120dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:onClick="BTL"
                android:text="Back to login"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <LinearLayout

        android:layout_marginLeft="25dp"
        android:layout_below="@id/card"
        android:id="@+id/login_follow"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="center"
            android:background="#363435"
            android:layout_marginLeft="45dp"
            android:layout_width="90dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:text="Follow us"
            android:textColor="#363435"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center"
            android:background="#363435"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="1dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/link_login"
        android:layout_marginLeft="27dp"
        android:layout_below="@id/login_follow"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="70dp"
            android:src="@drawable/insta"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/fb"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/youtube"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/browser"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/link_login"
        android:layout_marginTop="55dp"
        android:background="#08617f" />

</RelativeLayout>