<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:background="@drawable/crystal">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/homelogo"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:riv_border_color="#333333"
        app:riv_border_width="1dp"
        app:riv_corner_radius="8dp"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:text="DHANSHREE GRAPHICS"
        android:textColor="#08617f"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="30dp"
        android:layout_below="@id/homelogo"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <TextView
            android:background="#08617f"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="SLIDE SHOW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/todayfes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="18dp"
        android:text="TODAY FESTIVAL"
        android:textColor="#08617f"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/lineTfes"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/todayfes"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:background="#08617f" />

    <TextView

        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/corner_viewall"
        android:layout_marginRight="42dp"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="View All"
        android:layout_above="@id/lineTfes"
        android:layout_width="50dp"
        android:layout_height="13dp"/>

    <LinearLayout
        android:id="@+id/first"
        android:orientation="horizontal"
        android:layout_below="@id/lineTfes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/upfes"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:textColor="#08617f"
        android:textSize="20dp"
        android:text="UPCOMING FESTIVAL"
        android:layout_below="@id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/lineUfes"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/upfes"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:background="#08617f" />

    <TextView

        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/corner_viewall"
        android:layout_marginRight="42dp"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="View All"
        android:layout_above="@id/lineUfes"
        android:layout_width="50dp"
        android:layout_height="13dp"/>

    <LinearLayout
        android:id="@+id/second"
        android:orientation="horizontal"
        android:layout_below="@id/lineUfes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/trends"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:textColor="#08617f"
        android:textSize="20dp"
        android:text="TRENDS"
        android:layout_below="@id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/lineTrends"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/trends"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="35dp"
        android:background="#08617f" />

    <TextView

        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/corner_viewall"
        android:layout_marginRight="42dp"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="View All"
        android:layout_above="@id/lineTrends"
        android:layout_width="50dp"
        android:layout_height="13dp"/>

    <LinearLayout
        android:id="@+id/third"
        android:orientation="horizontal"
        android:layout_below="@id/lineTrends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/third"
        android:layout_marginTop="90dp"
        android:background="#08617f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/third"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:onClick="festival"
            android:src="@drawable/festival" />

        <ImageView
            android:onClick="profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/profile" />

        <ImageView
            android:onClick="rupee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/planandpayment" />

        <ImageView
            android:onClick="setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/setting" />
    </LinearLayout>


</RelativeLayout>
